<h1>New Article<h1>

<%= link_to "Back to Home Page", root_path%>

<%= form_with model: @article do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
        <% @article.errors.full_messages_for(:title).each do |message| %>
            <%= message %><br>
        <% end %>
    </div>

    <div>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
        <% @article.errors.full_messages_for(:body).each do |message| %>
            <%= message %><br>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>